<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ativ1"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:background="#2196F3"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:text="@string/txt_ativ1"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFCFC"
        android:textDirection="inherit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterNumber1"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/txt_enternum"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ativ1" />

    <EditText
        android:id="@+id/enterNumber2"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/txt_enternum"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterNumber1" />

    <Button
        android:id="@+id/sumButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_sum"
        android:textColor="#F4EFEF"
        app:backgroundTint="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterNumber2" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumButton" />
</androidx.constraintlayout.widget.ConstraintLayout>